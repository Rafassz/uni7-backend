NODE_ENV=development
PORT=3000

# Configuração do Repositório - Ative para usar SQL Server
USE_DATABASE=true

# Configurações SQL Server Local
# Opção 1: LocalDB (mais simples)
# DB_SERVER=(localdb)\\MSSQLLocalDB
# DB_USER=
# DB_PASSWORD=

# Opção 2: SQL Server Express (instância nomeada)
DB_SERVER=localhost\\SQLEXPRESS
DB_USER=sa
DB_PASSWORD=your_password_here

# Configurações do Banco
DB_PORT=1433
DB_DATABASE=DenunciaDB

# Pool de Conexão
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_REQUEST_TIMEOUT=30000